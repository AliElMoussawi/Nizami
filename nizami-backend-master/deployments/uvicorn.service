[Unit]
Description=Uvicorn ASGI Server for Django Project
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/app_python/current
ExecStart=/home/ubuntu/app_python/current/.venv/bin/uvicorn src.asgi:application --host 0.0.0.0 --port 8001 --workers 4
Restart=always
RestartSec=3
Environment="PATH=/home/ubuntu/app_python/current/venv/bin"
Environment="DJANGO_SETTINGS_MODULE=src.settings"

[Install]
WantedBy=multi-user.target
